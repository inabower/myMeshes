FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    ".*"
    {
        type            uniformFixedValue;
        uniformValue    (0 0 0);
    }

    "round.*"
    {
        patchType       overset;
        type            zeroGradient;
    }

    human
    {
        type            oscillatingDisplacement;
        amplitude       (0.2 0 0);
        omega           6.28;
        value           uniform (0 0 0);
    }

    human2
    {
		/*
